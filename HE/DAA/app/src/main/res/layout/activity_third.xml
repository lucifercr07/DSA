<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background_one"
    tools:context="com.example.prasha.daa.ThirdActivity">

    <TextView
        android:text="VS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner4"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:fontFamily="cursive" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="110dp"
        android:layout_height="500dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:fontFamily="cursive"
                android:id="@+id/textView19" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView20"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_below="@+id/textView20"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="cursive"
                android:layout_marginTop="50dp"
                android:id="@+id/textView21" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView21"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textView22"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:text="Compare"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:background="#21618C"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="165dp"
        android:textAlignment="center"
        android:entries="@array/Sorts"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="180dp"
        android:textAlignment="center"
        android:entries="@array/Sorts"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

</RelativeLayout>
